<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="340dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginStart="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bg_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg1" />

        <TextView
            android:id="@+id/txt_jenisKost"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_active"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:padding="2dp"
            android:text="Putri"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_namaKost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/price"
            android:fontFamily="@font/semibold"
            android:text="Kost Bu Amel"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:background="@drawable/price" />

            <TextView
                android:id="@+id/txt_hargaKost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:text="500.000/bln"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>